<%= link_to(@link_url, class: "rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg sm:p-6") do %>

    <h3 class="mt-0.5 text-lg font-medium text-gray-900">
        <%= @title %>
    </h3>

    <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
        <%= @description %>
    </p>

    <p class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
        <span>
            <%= @link_text %>
            <span aria-hidden="true">
                &rarr;
            </span>
        </span>
    </p>
<% end %>
