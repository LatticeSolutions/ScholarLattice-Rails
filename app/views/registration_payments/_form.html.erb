<%= form_with(model: payment, url: payment.new_record? ? registration_payments_path(registration) : payment_path(payment), class: "contents") do |form| %>
  <%= render "fields_for", payment: payment, form: form %>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
