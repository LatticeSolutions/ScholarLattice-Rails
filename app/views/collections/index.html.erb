<section>
    <h1 class="text-2xl font-bold text-gray-900 md:text-3xl py-5 flex items-center">
        
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-10"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5A1 1 0 014 7zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"></path>
        </svg>
        <span class="px-3">Collections</span>
    </h1>
    
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collections.each do |collection| %>
            <%= render partial: "card", locals: { collection: collection } %>
        <% end %>
    </div>

    <% if @current_user and @current_user.site_admin %>
        <p class="mt-3">
            <%= link_to "New Collection", new_collection_path, class: "underline text-blue-600 hover:text-blue-800" %>
        </p>
    <% end %>
</section>