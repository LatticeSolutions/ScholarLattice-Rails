<section>
    <h1 class="text-2xl font-bold text-gray-900 md:text-3xl py-5 flex items-center">
        
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-10"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5A1 1 0 014 7zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"></path>
        </svg>
        <span class="px-3">Collections</span>
    </h1>
    
    <% if @current_user and @current_user.site_admin? %>
        <div class="inline-flex rounded-lg border border-gray-100 bg-gray-100 p-1 mb-5">
            <span
                class="inline-flex items-center gap-2 rounded-md px-4 py-2 text-sm text-gray-500"
            >
                <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-4"
                >
                    <path d="M10 12C10 14.2091 8.20914 16 6 16C3.79086 16 2 14.2091 2 12C2 9.79086 3.79086 8 6 8C8.20914 8 10 9.79086 10 12ZM10 12H22V15" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    <path d="M18 12V15" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>

                Admin:
            </span>

            <%= link_to(new_collection_path, class: "inline-flex items-center gap-2 rounded-md bg-white px-4 py-2 text-sm text-blue-500 shadow-sm focus:relative") do %>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="size-4"
                >
                    <path d="M8 12H12M16 12H12M12 12V8M12 12V16" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path><path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                New
            <% end %>
        </div>
    <% end %>
    
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collections.each do |collection| %>
            <%= render partial: "card", locals: { collection: collection } %>
        <% end %>
    </div>

</section>