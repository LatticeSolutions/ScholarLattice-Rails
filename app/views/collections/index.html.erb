<section>
    <h1 class="text-2xl font-bold text-gray-900 md:text-3xl py-5 flex items-center">
        <span class="size-10">
            <%= render IconComponent.new(:collection) %>
        </span>
        <span class="px-3">Collections</span>
    </h1>
    
    <% if @current_user and @current_user.site_admin? %>
        <div class="inline-flex rounded-lg border border-gray-100 bg-gray-100 p-1 mb-5">
            <span
                class="inline-flex items-center gap-2 rounded-md px-4 py-2 text-sm text-gray-500"
            >
                <span class="size-4">
                    <%= render IconComponent.new(:key) %>
                </span>
                Admin:
            </span>

            <%= link_to(new_collection_path, class: "inline-flex items-center gap-2 rounded-md bg-white px-4 py-2 text-sm text-blue-500 shadow-sm focus:relative") do %>
                <span class="size-4">
                    <%= render IconComponent.new(:oplus) %>
                </span>
                New
            <% end %>
        </div>
    <% end %>
    
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collections.each do |collection| %>
            <%= render partial: "card", locals: { collection: collection } %>
        <% end %>
    </div>

</section>