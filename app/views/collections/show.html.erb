<%= render partial: "breadcrumb", locals: { collection: @collection } %>
<section>

    <h1 class="text-2xl font-bold text-gray-900 md:text-3xl py-5">
        <%= @collection.title %>
        <span class="text-xl text-gray-600">
            <%= @collection.short_title %>
        </span>
    </h1>

    <p class="prose"><%= @collection.description %></p>

    <% unless @collection.children.empty? %>
        <h2 class="text-xl font-medium text-gray-800 md:text-2xl py-5">
            Subcollections:
        </h2>
        <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
            <% @collection.children.each do |collection| %>
                <%= render partial: "card", locals: { collection: collection } %>
            <% end %>
        </div>
    <% end %>

    <% if @collection.admin_users.include? @current_user %>
        <ul>
            <li>
                <%= link_to "Edit", edit_collection_path %>
            </li>
            <li>
                <%= link_to "Destroy", collection_path, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %>
            </li>
        </ul>
    <% end %>
</section>