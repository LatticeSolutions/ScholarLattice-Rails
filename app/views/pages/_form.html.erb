<%= form_with(model: page, url: (@page.new_record? ? [@page.collection, @page] : [@page]), class: "contents") do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title, class: CssClass::LABEL %>
    <%= form.text_field :title, class: CssClass::TEXT_FIELD %>
  </div>

  <div class="my-5">
    <%= form.label :content, class: CssClass::LABEL do %>Content (supports Markdown)<% end %>
    <%= form.text_area :content, class: "#{CssClass::TEXT_AREA} h-48" %>
  </div>

  <div class="mb-3">
    <%= form.label :order, class: CssClass::LABEL %>
    <%= form.number_field :order, class: CssClass::NUMBER_FIELD %>
  </div>

  <div class="my-5">
    <%= form.label :visibility, class: CssClass::LABEL %>
    <%= form.select :visibility, Page.visibilities.keys.map { 
        |key| [key.humanize, key] }, { selected: page.visibility || :public 
      }, class: CssClass::SELECT %>
  </div>

  <div class="my-5">
    <%= form.label :is_home, class: CssClass::LABEL do %>
      Make this the home page
    <% end %>
    <%= form.check_box :is_home, class: CssClass::CHECK_BOX %>
  </div>

  <div>
    <span class="<%= CssClass::BUTTON_BAR %>">
      <%= form.submit class: CssClass::SUBMIT %>
      <%= link_to "Cancel", cancel_path, class: CssClass::LINK_BUTTON %>
    </span>
  </div>
<% end %>
