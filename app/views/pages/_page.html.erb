<div id="<%= dom_id page %>">
    <h1 class="text-xl font-bold text-gray-900 md:text-2xl pt-2">
        <%= @page.collection.title %>
    </h1>
    <h2 class="text-2xl font-bold text-gray-900 md:text-3xl pt-1">
        <%= @page.title %>
        <span class="text-xl font-bold text-gray-600 md:text-2xl pt-1">
            (Home Page)
        </span>
    </h2>
    <% if @page.is_home_page? %>
    <% end %>
    <div class="my-5 mx-auto prose sm:prose-xl prose-a:text-blue-600 hover:prose-a:text-blue-500 prose-a:no-underline">
        <%= sanitize page.content_html %>
    </div>
</div>
