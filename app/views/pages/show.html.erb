<div class="mx-auto md:w-2/3 w-full">
<%= render "breadcrumb", page: @page %>
  <% if @current_user and @current_user.can_administrate? @page.collection %>
      <div class="mt-3">
      <%= render AdminBarComponent.new(
          {icon: :edit, path: edit_page_path(@page), text: "Edit"},
      )%>
      </div>
  <% end %>
  <%= render @page %>
</div>
