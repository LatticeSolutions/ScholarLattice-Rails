<% content_for :title, "#{@page.title} | #{@page.collection.title}" %>
  
<div class="mx-auto md:w-2/3 w-full">
  <%= render "breadcrumb", page: @page %>
  <% if can? :manage, @page %>
      <div class="mt-3">
      <%= render AdminBarComponent.new(
          {icon: :edit, path: edit_page_path(@page), text: "Edit"},
      )%>
      </div>
  <% end %>
  <h1 class="text-xl font-bold text-gray-900 md:text-2xl pt-2">
      <%= @page.collection.title %>
  </h1>
  <h2 class="text-2xl font-bold text-gray-900 md:text-3xl pt-1">
      <%= @page.title %>
      <% if @page.is_home? %>
          <span class="text-xl font-bold text-gray-600 md:text-2xl pt-1">
              (Home Page)
          </span>
      <% end %>
  </h2>
  <%= render @page %>
</div>
