<% content_for :title, "New Question | #{@collection.title}" %>
<div class="mx-auto md:w-2/3 w-full">
  <%= render partial: "breadcrumb", locals: { collection: @collection, action: "New" } %>
  <h1 class="font-bold text-4xl">New question</h1>

  <%= render "form", question: @question %>

  <%= link_to "Back to questions", collection_questions_path(@collection), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
