<%= form_with(model: option, url: option.new_record? ? [collection, option] : option, class: "contents") do |form| %>
  <%= render "fields_for", option: option, form: form %>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
