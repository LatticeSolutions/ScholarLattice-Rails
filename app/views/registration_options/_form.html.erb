<%= form_with(model: option, url: option.new_record? ? [collection, option] : option, class: "contents") do |form| %>
  <% if option.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
        <% option.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: CssClass::LABEL %>
    <%= form.text_field :name, value: option.name,
        class: CssClass::TEXT_FIELD %>
  </div>

  <div class="my-5">
    <%= form.label :cost, class: CssClass::LABEL do %>
      Cost in USD cents (leave blank for no-cost events)
    <% end %>
    <%= form.number_field :cost, value: option.cost,
        class: CssClass::NUMBER_FIELD %>   
  </div>

  <div class="my-5">
    <%= form.label :stock, class: CssClass::LABEL %>
    <%= form.number_field :stock, value: option.stock,
        class: CssClass::NUMBER_FIELD %>   
  </div>

  <div class="my-5">
    <%= form.label :allowed_domains, class: CssClass::LABEL do %>
      Comma-separated list of allowed domains (leave blank to not restrict domains)
    <% end %>
    <%= form.text_field :allowed_domains, value: option.allowed_domains,
        class: CssClass::TEXT_FIELD %>
  </div>

  <div class="my-5">
    <%= form.label :auto_accept, class: CssClass::LABEL %>
    <%= form.check_box :auto_accept, class: CssClass::CHECK_BOX %>
  </div>

  <div class="my-5">
    <%= form.label :opens_on, class: CssClass::LABEL %>
    <% Time.use_zone(collection.inherited_time_zone) do %>
      <%= form.datetime_field :opens_on, class: CssClass::DATETIME_FIELD %> 
    <% end %>
    <% collection.errors.full_messages_for(:opens_on).each do |message| %>
      <div class="text-red-800"><%= message %></div>
    <% end %>
  </div>
  <div class="my-5">
    <%= form.label :closes_on, class: CssClass::LABEL %>
    <% Time.use_zone(collection.inherited_time_zone) do %>
      <%= form.datetime_field :closes_on, class: CssClass::DATETIME_FIELD %> 
    <% end %>
    <% collection.errors.full_messages_for(:closes_on).each do |message| %>
      <div class="text-red-800"><%= message %></div>
    <% end %>
  </div>

  <div>
    <span class="<%= CssClass::BUTTON_BAR %>">
      <%= form.submit class: CssClass::SUBMIT %>
      <%= link_to "Cancel", collection_registrations_path(option.collection), class: CssClass::LINK_BUTTON %>
    </span>
  </div>
<% end %>
