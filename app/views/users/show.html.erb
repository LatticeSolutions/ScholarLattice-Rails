<% content_for :title, "#{@user.name} | Profile" %>
  
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @user %>

    <% if can? :edit, @user %>
      <%= link_to "Edit this user", edit_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <% if can? :destroy, @user %>
      <%= button_to "Destroy this user", @user, "@click" => "if(!confirm('Are you sure?')) $event.preventDefault()",
        class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", form_class: "inline-block", method: :delete %>
    <% end %>
    <%= link_to "Back to dashboard", dashboard_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
