<% content_for :title, "Edit Submission | #{@submission.collection.title}" %>

<div class="mx-auto md:w-2/3 w-full">

  <%= render partial: "breadcrumb", locals: { collection: @submission.collection, action: "Edit" } %>

  <h1 class="font-bold text-4xl">Editing Submission</h1>

  <%= render "form", submission: @submission %>

  <%= link_to "Show this submission", @submission, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to collection", collection_path(@submission.collection), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
