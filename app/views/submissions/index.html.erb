<section class="mx-auto md:w-3/4 w-full">
    <%= render partial: "breadcrumb", locals: { collection: @collection } %>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Submissions" %>
    
    <h1 class="text-2xl font-bold text-gray-900 md:text-3xl py-5">
        <%= @collection.title %>
    </h1>
    <h2 class="text-xl font-medium text-gray-800 md:text-2xl py-3">
        <span class="size-4 inline-block">
            <%= render IconComponent.new(:key) %>
        </span>
        Unreviewed Submissions:
    </h2>
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collection.submissions.where(status: :submitted).each do |submission| %>
            <%= render partial: "submissions/card", locals: { submission: submission } %>
        <% end %>
    </div>
    <h2 class="text-xl font-medium text-gray-800 md:text-2xl py-3">
        <span class="size-4 inline-block">
            <%= render IconComponent.new(:key) %>
        </span>
        Accepted Submissions:
    </h2>
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collection.submissions.where(status: :accepted).each do |submission| %>
            <%= render partial: "submissions/card", locals: { submission: submission } %>
        <% end %>
    </div>
    <h2 class="text-xl font-medium text-gray-800 md:text-2xl py-3">
        <span class="size-4 inline-block">
            <%= render IconComponent.new(:key) %>
        </span>
        Rejected Submissions:
    </h2>
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8">
        <% @collection.submissions.where(status: :rejected).each do |submission| %>
            <%= render partial: "submissions/card", locals: { submission: submission } %>
        <% end %>
    </div>
</section>
