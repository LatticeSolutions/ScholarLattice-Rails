<% content_for :title, "#{@profile.name} | Profile" %>
  
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @profile %>

    <% if can? :edit, @profile %>
      <%= link_to "Edit this profile", edit_profile_path(@profile), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <% if can? :destroy, @profile %>
      <%= button_to "Destroy this profile", @profile, "@click" => "if(!confirm('Are you sure?')) $event.preventDefault()",
        class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", form_class: "inline-block", method: :delete %>
    <% end %>
    <%= link_to "Back to dashboard", dashboard_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
